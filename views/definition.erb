<h2>My word: <%= @definition.word.word_input %></h2>
<h3>Definition: <%= @definition.name %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Update definition:</label>
  <input id="name" name="name" type="text" class="form-control">
  <br>
  <button type="submit" class="danger">Update!</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <br>

  <button type="submit" class="danger">Delete definition</button>
</form>
<br>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.word_input %></a>
